<UserControl
    x:Class="Rezultz.Uwp.UserControls.RezultzBannerAdvertisementUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
        <ResourceDictionary>

            <Style x:Key="HereImageStyle"
                   TargetType="Image">
                <Setter Property="Width" Value="120" />
                <Setter Property="Stretch" Value="Uniform" />
            </Style>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <!-- ReSharper disable once UnusedMember.Local -->
        <HyperlinkButton
            x:Name="RezultzWindowsStoreListingHyperlinkButton"
            IsEnabled="True"
            NavigateUri="https://www.microsoft.com/store/apps/9PM9JHWJQFMN"
            Style="{StaticResource AppImageHyperlinkButtonStyle}"
            Visibility="Visible">
            <Image Source="/Images/jgh_powerpoint_featuregraphicforrezultz.png" Style="{StaticResource HereImageStyle}" />
        </HyperlinkButton>
    </Grid>
</UserControl>
